<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <style>
    .login .divider:after,
    .login .divider:before {
      content: "";
      flex: 1;
      height: 1px;
      background: #eee;
    }

    .login .h-custom {
      height: calc(100% - 73px);
    }

    .login .form-control:focus {
      color: var(--bs-body-color);
      background-color: var(--bs-body-bg);
      border-color: #c211da;
      outline: 0;
      box-shadow: 0 0 0 .25rem rgba(162, 3, 211, 0.25);
    }

    @media (max-width: 450px) {
      .login .h-custom {
        height: 100%;
      }
    }
  </style>
</head>

<body>

  <div class="login container">
    <section class="vh-100">
      <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col-md-9 col-lg-6 col-xl-5">
            <img src="/img/login.png" class="img-fluid" alt="Sample image">
          </div>
          {{!-- "https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp" --}}
          <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
            <form method="post" action="/auth/Login">
              <div class="d-flex flex-row align-items-center justify-content-center justify-content-lg-start">
                <p class="lead fw-normal mb-0 me-3">Sign in (Admin or Employee)</p>
              </div>

              <!-- Email input -->
              <div data-mdb-input-init class="form-outline mb-4 pt-3">
                <input type="email" id="email" name="email" class="form-control form-control-lg"
                  placeholder="Enter a valid email address" required />
                <label class="form-label pt-2" for="formEmail">Email address</label>
              </div>

              <!-- Password input -->
              <div data-mdb-input-init class="form-outline mb-3">
                <input type="password" id="password" name="password" class="form-control form-control-lg"
                  placeholder="Enter password" required />
                <label class="form-label pt-2" for="formPassword">Password</label>
              </div>

              {{!-- <div class="d-flex justify-content-between align-items-center">
                <!-- Checkbox -->
                <a href="#!" class="text-body">Forgot password?</a>
              </div> --}}

              <div class="text-center text-lg-start mt-4 pt-2">
                <input type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg"
                  style="padding-left: 2.5rem; padding-right: 2.5rem;" value="Login">
                <p class="small fw-bold mt-2 pt-1 mb-0">Don't have an account? Reach Out <a href="#!"
                    class="link-danger">Admin</a></p>
              </div>

            </form>
          </div>
        </div>
      </div>

    </section>

  </div>

  <script>



    // Get the query parameter from the URL
    const urlParams = new URLSearchParams(window.location.search);
    const alertValue = urlParams.get('alert');

    if (alertValue) {
      // You can now use this value to show a message or do anything else
      console.log("Alert:", alertValue);

      // Example: show alert
      if (alertValue === 'invalid') {
        alert('Invalid email or password');
      } else if (alertValue === 'empty') {
        alert('Please fill in all fields');
      } else if (alertValue === 'error') {
        alert('Something went wrong. Please try again later.');
      }
      // You can add more conditions here
    }


    // After alert shown
    if (window.location.search.includes("alert")) {
      window.history.replaceState({}, document.title, window.location.pathname);
    }

  </script>

</body>

</html>