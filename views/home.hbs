<!DOCTYPE html>
<html lang="en">

<head>
  {{>head}}

  <title>Home</title>

  <style>
    .search-wrapper {
      display: flex;
      justify-content: center;
      align-items: center;
      margin-top: 2rem;
      gap: 0.5rem;
    }

    .search-wrapper input {
      width: 100%;
      max-width: 500px;
      padding: 10px 15px;
      border: 2px solid var(--main-color);
      border-radius: 50px;
      outline: none;
    }

    .search-wrapper button {
      background-color: var(--main-color);
      border: none;
      padding: 10px 16px;
      border-radius: 50%;
      color: white;
      cursor: pointer;
    }

    .search-wrapper button:hover {
      background-color: var(--accent-color);
    }

    .dashboard-section {
      padding: 40px 20px;
    }

    .dashboard-cards .card {
      border: none;
      box-shadow: 0 0 8px rgba(0, 0, 0, 0.05);
      transition: 0.3s;
      border-left: 5px solid var(--main-color);
    }

    .dashboard-cards .card:hover {
      transform: translateY(-3px);
    }

    .alert-theme {
      background-color: #e0d6f6;
      border-left: 5px solid var(--main-color);
    }

    .icon {
      font-size: 1.5rem;
    }
  </style>

</head>

<body>

  {{>nav}}

  <!-- Center Search Box -->
  <form action="/auth/search" method="POST">
    <div class="search-wrapper container">
      <input type="text" name="search_query" value="{{s}}" placeholder="What are you looking for?" required>
      <button type="submit"><i class="fas fa-search"></i></button>
    </div>
  </form>

  <!-- Extra Dashboard Section -->
  <section class="dashboard-section container">
    <h3 class="text-center mb-4">Welcome to the Vehicle Compliance Dashboard</h3>
    <p class="text-center text-muted mb-5">Track all your clients' document statuses in one place. Stay informed. Act
      fast.</p>

    <div class="row g-4 dashboard-cards">
      <div class="col-md-4">
        <div class="card p-3">
          <div class="card-body">
            <h5><i class="fas fa-bell icon text-warning me-2"></i> Upcoming Expiries</h5>
            <p class="text-muted">vehicles expiring in 7 days</p>
            <a href="/notification" class="btn btn-sm btn-outline-warning">View Alerts</a>
          </div>
        </div>
      </div>

      <div class="col-md-4">
        <div class="card p-3">
          <div class="card-body">
            <h5><i class="fas fa-table icon text-primary me-2"></i> Client Records</h5>
            <p class="text-muted">All registered vehicles and owners</p>
            <a href="/table" class="btn btn-sm btn-outline-primary">Open Table</a>
          </div>
        </div>
      </div>

      <div class="col-md-4">
        <div class="card p-3">
          <div class="card-body">
            <h5><i class="fas fa-cogs icon text-dark me-2"></i> Admin Tools</h5>
            <p class="text-muted">Manage profile and system settings</p>
            <a href="/admin" class="btn btn-sm btn-outline-dark">Go to Admin</a>
          </div>
        </div>
      </div>
    </div>

    <!-- Optional Notice -->
    <div class="alert alert-theme mt-5 text-center">
      <i class="fas fa-info-circle me-2"></i>Stay ahead of document expiries â€” your clients depend on it!
    </div>
  </section>

</body>

</html>